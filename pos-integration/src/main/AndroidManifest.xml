<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ch.privately.posintegration">

    <uses-sdk tools:overrideLibrary="           androidx.camera.camera2, androidx.camera.core,           androidx.camera.view, androidx.camera.lifecycle" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Required for USB tethering detection -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name">
        <activity
            android:name=".ChooseVerificationActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PosIntegration">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
            
        <activity
            android:name=".AgeVerificationSuccessActivity"
            android:exported="false"
            android:theme="@style/Theme.PosIntegration" />
            
        <activity
            android:name=".AgeVerificationFailureActivity"
            android:exported="false"
            android:theme="@style/Theme.PosIntegration" />
            
        <activity
            android:name=".IdCaptureActivity"
            android:exported="false"
            android:theme="@style/Theme.PosIntegration" />
    </application>

</manifest>
