<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for PoS integration -->
    <!-- This is acceptable since the app only connects to local PoS terminals -->
    <!-- and doesn't make external internet requests that need encryption -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
